
.container {
	min-height: 100vh;
	background: linear-gradient(135deg, #1a0b2e 0%, #2a1b3e 50%, #3a2b4e 100%);
	color: #fff;
	padding: 20rpx;
}
.love-card {
	background-color: rgba(255,255,255,0.05);
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	-webkit-backdrop-filter: blur(10rpx);
	        backdrop-filter: blur(10rpx);
	border: 1rpx solid rgba(255,215,0,0.1);
}
.card-header {
	margin-bottom: 30rpx;
}
.title {
	font-size: 32rpx;
	font-weight: bold;
	color: #ffd700;
	display: block;
	margin-bottom: 10rpx;
}
.subtitle {
	font-size: 24rpx;
	color: #e6d5ff;
	opacity: 0.8;
}
.card-content {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.analysis-item {
	display: flex;
	flex-direction: column;
	gap: 10rpx;
}
.label {
	font-size: 28rpx;
	color: #e6d5ff;
}
.tags {
	display: flex;
	flex-wrap: wrap;
	gap: 10rpx;
}
.tag {
	padding: 10rpx 20rpx;
	background: rgba(255,215,0,0.1);
	color: #ffd700;
	border-radius: 30rpx;
	font-size: 24rpx;
	border: 1rpx solid rgba(255,215,0,0.2);
}
.value {
	font-size: 28rpx;
	color: #e6d5ff;
	line-height: 1.6;
}
.score-section {
	background-color: rgba(255,255,255,0.05);
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	-webkit-backdrop-filter: blur(10rpx);
	        backdrop-filter: blur(10rpx);
	border: 1rpx solid rgba(255,215,0,0.1);
}
.score-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 20rpx;
}
.score {
	display: flex;
	align-items: baseline;
}
.number {
	font-size: 48rpx;
	font-weight: bold;
	color: #ffd700;
}
.unit {
	font-size: 24rpx;
	color: #e6d5ff;
	margin-left: 10rpx;
}
.progress {
	width: 100%;
	height: 10rpx;
	background: rgba(255,255,255,0.1);
	border-radius: 5rpx;
	overflow: hidden;
}
.progress-bar {
	height: 100%;
	background: linear-gradient(90deg, #ffd700, #ffa500);
	border-radius: 5rpx;
	transition: width 0.3s ease;
}
.detail-section {
	background-color: rgba(255,255,255,0.05);
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	-webkit-backdrop-filter: blur(10rpx);
	        backdrop-filter: blur(10rpx);
	border: 1rpx solid rgba(255,215,0,0.1);
}
.detail-item {
	margin-bottom: 30rpx;
}
.detail-item:last-child {
	margin-bottom: 0;
}
.content {
	font-size: 28rpx;
	line-height: 1.6;
	color: #e6d5ff;
}
.reminder-section {
	background-color: rgba(255,255,255,0.05);
	border-radius: 20rpx;
	padding: 30rpx;
	-webkit-backdrop-filter: blur(10rpx);
	        backdrop-filter: blur(10rpx);
	border: 1rpx solid rgba(255,215,0,0.1);
}
.reminder-list {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.reminder-item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	background-color: rgba(255,255,255,0.03);
	border-radius: 15rpx;
	border: 1rpx solid rgba(255,215,0,0.05);
}
.reminder-item .icon {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	background: rgba(255,215,0,0.1);
	color: #ffd700;
	display: flex;
	align-items: center;
	justify-content: center;
	margin-right: 20rpx;
	font-size: 24rpx;
	border: 1rpx solid rgba(255,215,0,0.2);
}
.reminder-item .text {
	font-size: 28rpx;
	color: #e6d5ff;
}
.reminder-item:active {
	transform: scale(0.98);
	background-color: rgba(255,215,0,0.05);
	border-color: rgba(255,215,0,0.2);
	box-shadow: 0 0 15rpx rgba(255,215,0,0.1);
}
