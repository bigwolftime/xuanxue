
.container {
	min-height: 100vh;
	background: linear-gradient(135deg, #1a0b2e 0%, #2a1b3e 50%, #3a2b4e 100%);
	color: #fff;
	padding: 20rpx;
}
.gods-card,
.pattern-card,
.fortune-card {
	background-color: rgba(255,255,255,0.05);
	border-radius: 20rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	-webkit-backdrop-filter: blur(10rpx);
	        backdrop-filter: blur(10rpx);
	border: 1rpx solid rgba(255,215,0,0.1);
}
.card-header {
	margin-bottom: 30rpx;
}
.title {
	font-size: 32rpx;
	font-weight: bold;
	color: #ffd700;
	display: block;
	margin-bottom: 10rpx;
}
.subtitle {
	font-size: 24rpx;
	color: #e6d5ff;
	opacity: 0.8;
}
.gods-grid {
	display: grid;
	grid-template-columns: repeat(2, 1fr);
	gap: 20rpx;
}
.god-item {
	background: rgba(255,255,255,0.03);
	border-radius: 15rpx;
	padding: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	gap: 10rpx;
	border: 1rpx solid rgba(255,215,0,0.1);
}
.god-item .name {
	font-size: 28rpx;
	color: #ffd700;
	font-weight: bold;
}
.god-item .value {
	font-size: 36rpx;
	color: #e6d5ff;
}
.god-item .description {
	font-size: 24rpx;
	color: #e6d5ff;
	opacity: 0.8;
}
.pattern-content,
.fortune-content {
	display: flex;
	flex-direction: column;
	gap: 20rpx;
}
.pattern-item,
.fortune-item {
	display: flex;
	flex-direction: column;
	gap: 10rpx;
}
.label {
	font-size: 28rpx;
	color: #e6d5ff;
}
.value {
	font-size: 28rpx;
	line-height: 1.6;
	color: #e6d5ff;
}
.progress {
	width: 100%;
	height: 10rpx;
	background: rgba(255,255,255,0.1);
	border-radius: 5rpx;
	overflow: hidden;
}
.progress-bar {
	height: 100%;
	background: linear-gradient(90deg, #ffd700, #ffa500);
	border-radius: 5rpx;
	transition: width 0.3s ease;
}
